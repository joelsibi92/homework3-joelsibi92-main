<html lang="en">
<head>
    <%- include('../partials/head'); %>

</head>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
        <br>
    </header>

    <main>
        <!-- Code which will be creating the drop down menu which users will be using to navigate to desired programming language infos -->
        <div class="home_menu">
            <h1>Programming Language Background & Information</h1>
            <br>
            <form name="dropdown_menu" id="dropdown_menu" action="/action_page" method="post"> <!--Set to post, and also has an action sending user to said page upon sumbitting-->
