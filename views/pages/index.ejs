                <option value="err" selected="selected">Select Programming Language</option> <!--Default Value-->
                <option value="0" name="Python">Python</option>
                <option value="1" name="C">C</option>
                <option value="2" name="Java">Java</option>
                <option value="3" name="C#">C#</option>
                <option value="4" name="Javascript">Javascript</option>
                </select>
                <br><br><br><br><br><br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>